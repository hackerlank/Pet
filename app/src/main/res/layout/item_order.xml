<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_255_255_255">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_below="@id/view1"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv"
        android:layout_alignBottom="@id/iv"
        android:layout_alignTop="@id/iv"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待支付"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_ff_73_73"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="宠物定位环"
            android:singleLine="true"
            android:layout_toLeftOf="@id/tvState"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:textColor="@color/color_33_33_33"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量：1"
            android:singleLine="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_66_66_66"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_33_33_33"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:layout_toLeftOf="@id/tvPrice"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_33_33_33"
            android:textSize="13sp" />



    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@id/iv"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/tvOperatorOrder"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="立即支付"
        android:layout_below="@id/line"
        android:background="@drawable/bg_waiting_pay"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_255_255_255"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/tvOperatorOrder"
        android:layout_marginTop="10dp"
        android:background="@color/background_color"
        android:layout_height="10dp" />



</RelativeLayout>