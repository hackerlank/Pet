<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_255_255_255">

    <com.pet.widgets.RoundRectImageView
        android:id="@+id/ivAvater"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:round_radius="30"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/ivAvater"
        android:layout_marginLeft="10dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tvPublisherName"
            android:layout_width="match_parent"
            android:textSize="17sp"
            android:maxLines="1"
            android:text="发布人"
            android:textColor="@color/color_33_33_33"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvPetType"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="拉布拉多"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_99_99_99"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/male"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:text="今天在小区里找到了拉布拉多幼犬，有金黄色铃铛项圈，米白色毛发。"
            android:textColor="@color/color_33_33_33"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="幸福花园小区"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="5dp"
            android:textColor="@color/color_99_99_99"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_below="@id/ll"
        android:layout_marginTop="15dp"
        android:background="@color/background_color"
        android:layout_height="10dp"/>
</RelativeLayout>