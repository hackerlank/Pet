<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@android:color/black"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background_color"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="标题"
            android:textSize="18dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_popup_btn"
                android:textColor="@color/color_33_33_33"
                android:textSize="16sp" />

            <View
                android:id="@+id/popupFirstLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <Button
                android:id="@+id/btnSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_popup_btn"
                android:textColor="@color/color_33_33_33"
                android:textSize="16sp" />

            <View
                android:id="@+id/popupSecondLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_popup_btn"
                android:textColor="@color/color_33_33_33"
                android:visibility="gone" />

            <View
                android:id="@+id/popupThirdLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnFourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_popup_btn"
                android:textColor="@color/color_33_33_33"
                android:visibility="gone" />

            <View
                android:id="@+id/popupFourthLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnFifth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_popup_btn"
                android:textColor="@color/color_33_33_33"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:id="@+id/popupFifthLine"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/line" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popup_btn"
            android:text="@string/cancel"
            android:textColor="@color/color_99_99_99"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>