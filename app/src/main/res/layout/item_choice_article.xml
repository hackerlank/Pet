<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color_255_255_255">

    <com.gzcbkj.chongbao.widgets.RatioImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ratio="0.51"
        android:src="@drawable/default_1"
        android:scaleType="centerCrop"/>

    <com.gzcbkj.chongbao.widgets.RoundRectImageView
        android:id="@+id/ivAvater"
        android:layout_width="50dp"
        android:layout_marginLeft="15dp"
        android:layout_height="50dp"
        android:layout_below="@id/ivBg"
        android:layout_marginTop="-25dp"
        android:src="@drawable/touxiang"
        android:scaleType="centerCrop"
        app:round_radius="25"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="18分钟前"
        android:textColor="@color/color_99_99_99"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBg"
        android:layout_toRightOf="@id/ivAvater"
        android:layout_toLeftOf="@id/tvTime"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="迟迟"
        android:textColor="@color/color_00_55_87"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAvater"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp"
        android:text="今天貌似比昨天听话~"
        android:textColor="@color/color_11_11_11"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_color"
        android:layout_below="@id/tvContent"/>

</RelativeLayout>