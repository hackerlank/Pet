<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top_bar"/>


    <EditText
        android:id="@+id/etSuggestion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:gravity="left|top"
        android:textColorHint="@color/color_66_66_66"
        android:hint="@string/please_input_your_suggestion"
        android:textColor="@color/color_11_11_11"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_leave_msg"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/color_255_255_255"
        android:background="@drawable/bg_submit"
        android:layout_marginTop="50dp"
        android:textSize="15sp" />


</LinearLayout>