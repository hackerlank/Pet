<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="@color/background_color"
android:orientation="vertical">

<com.gzcbkj.chongbao.widgets.ScaleLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:width_height_scale="0.803">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_99_99_99" />

    <com.gzcbkj.chongbao.widgets.PagerDotView
        android:id="@+id/pagerDotView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:otherPageDotColor="@color/color_255_255_255"
        app:selectedPageDotColor="@color/color_ff_73_73"
        android:visibility="gone"/>
</com.gzcbkj.chongbao.widgets.ScaleLayout>

<LinearLayout
    android:id="@+id/llInformation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pet_guide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="@string/pet_guid"
            android:textColor="@color/color_33_33_33"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pet_encyclopedia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="@string/pet_encyclopedia"
            android:textColor="@color/color_33_33_33"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pet_public_welfare" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="@string/pet_public_welfare"
            android:textColor="@color/color_33_33_33"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pet_hospital" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:text="@string/pet_hospital"
            android:textColor="@color/color_33_33_33"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>

<com.gzcbkj.chongbao.widgets.ScaleLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:width_height_scale="0.456">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_99_99_99" />

    <com.gzcbkj.chongbao.widgets.PagerDotView
        android:id="@+id/pagerDotView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:otherPageDotColor="@color/color_255_255_255"
        app:selectedPageDotColor="@color/color_ff_73_73"
        android:visibility="gone" />
</com.gzcbkj.chongbao.widgets.ScaleLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:text="@string/choice_article"
    android:textColor="@color/color_11_11_11"
    android:textSize="15sp"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="1dp"
    android:text="@string/selected_tweets"
    android:textColor="@color/color_66_66_66"
    android:textSize="10sp" />

<View
    android:layout_width="wrap_content"
    android:layout_height="20dp" />

<LinearLayout
    android:id="@+id/llChoiceArticle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

</LinearLayout>

<TextView
    android:id="@+id/tvChangeABatch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="5dp"
    android:drawableLeft="@drawable/change_a_batch"
    android:drawablePadding="5dp"
    android:gravity="center"
    android:paddingRight="15dp"
    android:text="@string/other_article"
    android:textColor="@color/color_99_99_99"
    android:textSize="12sp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="@string/other_article"
    android:textColor="@color/color_11_11_11"
    android:textSize="15sp"
    android:textStyle="bold" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="1dp"
    android:text="@string/other_tweets"
    android:textColor="@color/color_66_66_66"
    android:textSize="10sp" />

<View
    android:layout_width="wrap_content"
    android:layout_height="20dp" />

</LinearLayout>