<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_255_255_255"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <com.gzcbkj.chongbao.widgets.RoundRectImageView
                android:id="@+id/ivAvater"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/touxiang"
                app:round_radius="26"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:paddingLeft="10dp"
                android:text="pink喵"
                android:gravity="center_vertical"
                android:textColor="@color/color_11_11_11"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_11_11_11"
                android:text="@string/area"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvArea"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:textColor="@color/color_99_99_99"
                android:text="深圳"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAlbum"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_255_255_255"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_11_11_11"
            android:text="@string/album"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/default_1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/default_1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/default_1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBtn1"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/send_msg"
            android:textColor="@color/color_255_255_255"
            android:background="@drawable/bg_submit"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBtn2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:text="@string/send_msg"
            android:textColor="@color/color_255_255_255"
            android:background="@drawable/bg_pass_verify"
            android:textSize="15sp" />

    </LinearLayout>




</LinearLayout>