<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        layout="@layout/layout_top_bar"/>

    <EditText
        android:id="@+id/etAddDes"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="left|top"
        android:textColorHint="@color/color_cc_cc_cc"
        android:hint="@string/add_video_des"
        android:textColor="@color/color_11_11_11"
        android:layout_marginTop="10dp"
        android:background="@color/color_255_255_255"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@color/color_255_255_255"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llRecordVideo"
            android:layout_width="112dp"
            android:layout_height="101dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_select_video">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_video"
                android:drawableTop="@drawable/record_video"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textColor="@color/color_99_99_99"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSelectVideo"
            android:layout_width="112dp"
            android:layout_height="101dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_select_video">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_video"
                android:drawableTop="@drawable/select_video"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:textColor="@color/color_99_99_99"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>