<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_255_255_255"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/tvMsgType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_message"
        android:layout_below="@id/line1"
        android:textColor="@color/color_33_33_33"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-12-12 23:00:24"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line1"
        android:textColor="@color/color_66_66_66"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvMsgContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息内容是消息内容是消息内容是消息内容是"
        android:layout_below="@id/tvMsgType"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_66_66_66"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/tvMsgContent"
        android:layout_height="10dp"/>



</RelativeLayout>