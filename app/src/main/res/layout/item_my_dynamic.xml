<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/llTime"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09"
        android:textColor="@color/color_33_33_33"
        android:textStyle="bold"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1月"
        android:layout_toRightOf="@id/tvTime1"
        android:textColor="@color/color_33_33_33"
        android:textStyle="bold"
        android:layout_alignBottom="@id/tvTime1"
        android:textSize="13sp" />
    </LinearLayout>

    <com.gzcbkj.chongbao.widgets.DynamicPhotosView
        android:id="@+id/dynamicPhotosView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/llTime">
    </com.gzcbkj.chongbao.widgets.DynamicPhotosView>


    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingRight="15dp"
        android:text="共2张"
        android:layout_alignBottom="@id/dynamicPhotosView"
        android:layout_toRightOf="@id/dynamicPhotosView"
        android:textColor="@color/color_66_66_66"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/tvPhoneNum"
        android:layout_marginLeft="5dp"
        android:text="卡哇伊！"
        android:layout_toRightOf="@id/dynamicPhotosView"
        android:layout_above="@id/tvPhoneNum"
        android:textColor="@color/color_33_33_33"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/dynamicPhotosView"/>



</RelativeLayout>