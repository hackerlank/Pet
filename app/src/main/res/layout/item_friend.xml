<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/color_255_255_255">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.gzcbkj.chongbao.widgets.RoundRectImageView
        android:id="@+id/ivAvater"
        android:layout_below="@id/view1"
        android:layout_marginTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/touxiang"
        app:round_radius="20"/>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="佳佳"
        android:singleLine="true"
        android:layout_below="@id/view1"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ivAvater"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_11_11_11"
        android:textSize="15sp" />




    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_below="@id/ivAvater"
        android:layout_marginTop="5dp"
        android:background="@color/line"
        android:layout_height="1dp"/>



</RelativeLayout>